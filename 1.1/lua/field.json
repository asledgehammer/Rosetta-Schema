{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/asledgehammer/PZ-Rosetta-Schema/main/1.1/lua/field.json",
    "type": "object",
    "minItems": 1,
    "additionalProperties": false,
    "properties": {
        "type": {
            "type": "string"
        },
        "nullable": {
            "description": "Appends the 'nil' type to the list of optional types.",
