{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/asledgehammer/PZ-Rosetta-Schema/main/1.1/java/class.json",
    "type": "object",
    "minItems": 1,
    "additionalProperties": false,
    "properties": {
        "generics": {
            "$ref": "generics.json"
        },
        "deprecated": {
            "type": "boolean",
            "description": "If the class is deprecated."
        },
        "javaType": {
            "type": "string"
        },
        "extends": {
            "type": "string"
        },
        "fields": {
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "^": {
                    "$ref": "field.json"
                }
            }
        },
        "constructors": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "constructor.json"
            }
        },
        "methods": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "method.json"
            }
        },
        "modifiers": {
            "$ref": "modifiers.json"
        },
        "notes": {
            "type": "string"
        },
        "tags": {
            "$ref": "../tags.json"
        }
    }
}