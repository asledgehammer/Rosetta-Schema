{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/asledgehammer/PZ-Rosetta-Schema/main/1.2/lua/class.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "properties": {
    "deprecated": {
      "type": ["boolean", "string"],
      "description": "If the class is deprecated."
    },
    "extends": {
      "type": "string"
    },
    "mutable": {
      "type": "boolean",
      "description": "If true, the Lua class will allow foreign properties assigned to it. E.G: '--- @field [any] any'"
    },
    "local": {
      "type": "boolean",
      "description": "If true, the class should be emitted as a local variable."
    },
    "constructors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "constructor.json"
      }
    },
    "staticFields": {
      "type": "object",
      "minItems": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^": {
          "$ref": "field.json"
        }
      }
    },
    "fields": {
      "type": "object",
      "minItems": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^": {
          "$ref": "field.json"
        }
      }
    },
    "overloads": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "overload.json"
      }
    },
    "operators": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "operator.json"
      }
    },
    "generics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "generic.json"
      }
    },
    "methods": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "method.json"
      }
    },
    "staticMethods": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "method.json"
      }
    },
    "notes": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  }
}
