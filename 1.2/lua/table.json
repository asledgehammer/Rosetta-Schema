{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2/lua/table.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "properties": {
    "deprecated": {
      "type": ["boolean", "string"],
      "description": "If the class is deprecated."
    },
    "mutable": {
      "type": "boolean",
      "description": "If true, the Lua class will allow foreign properties assigned to it. E.G: '--- @field [any] any'"
    },
    "local": {
      "type": "boolean",
      "description": "If true, the table should be emitted as a local variable."
    },
    "methods": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "method.json"
      }
    },
    "overloads": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "overload.json"
      }
    },
    "operators": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "operator.json"
      }
    },
    "notes": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  }
}
