{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2/lua/field.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string"
    },
    "static": {
      "type": "boolean",
      "description": "Default: False"
    },
    "nullable": {
      "description": "Appends the 'nil' type to the list of optional types.",
      "type": "boolean"
    },
    "notes": {
      "type": "string"
    },
    "defaultValue": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  }
}
