{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/asledgehammer/PZ-Rosetta-Schema/main/1.2/lua/parameter.json",
    "type": "object",
    "minItems": 1,
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "optional": {
            "description": "Makes a parameter optional. All optional parameters must be at the end of the parameter list.",
            "type": "boolean"
        },
        "nullable": {
            "description": "Appends the 'nil' type to the list of optional types.",
            "type": "boolean"
        },
        "notes": {
            "type": "string"
        }
    }
}