{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2/java/type.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "required": ["base"],
  "properties": {
    "full": {
      "type": "string",
      "description": "The full string version of the type."
    },
    "base": {
      "type": "string",
      "description": "The base type. This is required. E.G: String, int, List"
    },
    "generic": {
      "type": "boolean"
    },
    "bounds": {
      "type": "array",
      "anyOf": [
        {
          "$ref": "type.json"
        },
        {
          "type": "string"
        }
      ]
    },
    "bounds_type": {
      "type": "string",
      "enum": ["extends", "super"]
    },
    "parameters": {
      "$ref": "generics.json",
      "description": "Required for generic sub-type parameters. For List<String>, \"base\" would be \"List\" and generics would be [{\"base\": \"String\"}]"
    }
  },
  "dependencies": {
    "bounds": ["bounds_type"]
  }
}
