{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2/java/method.json",
  "type": "object",
  "additionalProperties": false,
  "minProperties": 1,
  "properties": {
    "name": {
      "type": "string"
    },
    "scope": {
      "type": "string",
      "enum": ["public", "package", "protected", "private"]
    },
    "static": {
      "type": "boolean",
      "description": "Default: False"
    },
    "final": {
      "type": "boolean",
      "description": "Default: False"
    },
    "deprecated": {
      "type": ["boolean", "string"],
      "description": "If the method is deprecated."
    },
    "parameters": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "parameter.json"
      }
    },
    "type_parameters": {
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "$ref": "type_parameter.json"
      }
    },
    "return": {
      "$ref": "return.json"
    },
    "notes": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  },
  "required": ["name"]
}
