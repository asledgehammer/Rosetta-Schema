{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/asledgehammer/Rosetta-Schema/main/1.2/java/field.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "deprecated": {
      "type": ["boolean", "string"],
      "description": "If the field is deprecated."
    },
    "modifiers": {
      "$ref": "modifiers.json"
    },
    "type": {
      "anyOf": [
        {
          "$ref": "type.json"
        },
        {
          "type": "string"
        }
      ]
    },
    "notes": {
      "type": "string"
    },
    "defaultValue": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  },
  "required": ["name", "type"]
}
