{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2/java/field.json",
  "type": "object",
  "minProperties": 1,
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "deprecated": {
      "type": ["boolean", "string"],
      "description": "If the field is deprecated."
    },
    "scope": {
      "type": "string",
      "enum": ["public", "package", "protected", "private"]
    },
    "static": {
      "type": "boolean",
      "description": "Default: False"
    },
    "final": {
      "type": "boolean",
      "description": "Default: False"
    },
    "transient": {
      "type": "boolean",
      "description": "Default: False"
    },
    "volatile": {
      "type": "boolean",
      "description": "Default: False"
    },
    "type": {
      "anyOf": [
        {
          "$ref": "type.json"
        },
        {
          "type": "string"
        }
      ]
    },
    "nullable": {
      "type": "boolean"
    },
    "defaultValue": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "tags": {
      "$ref": "../tags.json"
    }
  },
  "required": ["name", "type"]
}
