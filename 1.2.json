{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Rosetta-Docs/Rosetta-Docs-Schema/refs/heads/1.2/1.2.json",
  "type": "object",
  "minProperties": 1,
  "additionalItems": true,
  "properties": {
    "version": {
      "description": "The schema version for Rosetta. E.G: 1.2",
      "type": "string"
    },
    "locale": {
      "type": "string",
      "description": "The language locale to identify the language used for documentation. (Default: EN_US)",
      "default": "EN_US"
    },
    "languages": {
      "type": "object",
      "properties": {
        "java": {
          "$ref": "1.2/java.json"
        },
        "lua": {
          "$ref": "1.2/lua.json"
        }
      }
    },
    "applications": {
      "type": "object",
      "description": "All third-party schema definitions goes here."
    },
    "tags": {
      "$ref": "1.2/tags.json"
    }
  },
  "required": ["version"]
}
